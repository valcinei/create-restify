
const User = require('../../Models/User');

get = (req, res, next) => {
    /*implement your requests and response code here*/
    let userId = req.params.id
    res.send(User.get(userId))
    next()
}

post = (req, res, next) => {
    console.log(req.params)
    /*implement your requests and response code here*/
